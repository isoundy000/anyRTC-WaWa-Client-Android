<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#D9000000"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_gamestart" />

        <TextView
            android:id="@+id/tv_fangqi"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:textColor="#ffffff"
            android:text="无力再战"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"
            android:visibility="gone"
            android:background="@drawable/button_wulizaizhan"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_xiuxi"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:textColor="#ffffff"
            android:text="休息一下"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"
            android:visibility="gone"
            android:background="@drawable/button_xiuxiyixia"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/button_zailaiyiju"
            android:gravity="center"
            android:text="再来一局"
            android:layout_gravity="bottom|right"
            android:textColor="#ffffff" />
    </FrameLayout>


</RelativeLayout>